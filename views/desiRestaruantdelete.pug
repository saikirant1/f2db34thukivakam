extends layout 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let desiRestaruantid = toShow._id 
    - let desiRestaruantRating = toShow.desiRestaruantRating 
    - let desiRestaruantCost = toShow.desiRestaruantCost
    - let desiRestaruantLocation = toShow.desiRestaruantLocation
    - let actionid = "/resource/desiRestaruant/" + desiRestaruantid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='desiRestaruantAttr mr-3') desiRestaruant ID is: 
        div #{desiRestaruantid} 
      div.row 
        div(class='desiRestaruantAttr mr-3') desiRestaruant Rating is: 
        div #{desiRestaruantRating} 
      div.row 
        div(class='desiRestaruantAttr mr-3') desiRestaruant Cost is: 
        div #{desiRestaruantCost} 
      div.row 
        div(class='desiRestaruantAttr mr-3') desiRestaruant Location is: 
        div #{desiRestaruantLocation} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the desiRestaruant collection 
      window.location.href='/desiRestaruant' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      // Dont need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/desiRestaruant' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 